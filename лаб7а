#include <iostream>
using namespace std;

char compare(int a, int b) {
    if (a > b) return '>';
    if (a < b) return '<';
    return '=';
}

int main() {
	setlocale(LC_ALL, "ukr");
    int x, y;

    cout << "������ 2 �����: ";

    // ��������� ��������
    if (!(cin >> x >> y)) {
        cout << "�������! ������� ������ ��� �����! " << endl;
        return 1;
    }

    char result = compare(x, y);
    cout << x << result << y << endl;

    return 0;
}

#include <iostream>
using namespace std;

const int rows = 3;
const int cols = 4;

void fillArray(int arr[rows][cols]) {
	cout << "������ �������� ������ (" << rows << "x" << cols << "):\n";
	for (int i = 0; i < rows; i++) {
		for (int j = 0; j < cols; j++) {
			cin >> arr[i][j];
		}
	}
}
void printArray(int arr[rows][cols]) {
    cout << "�����:\n";
    for (int i = 0; i < rows; i++) {
        for (int j = 0; j < cols; j++) {
            cout << arr[i][j] << "\t";
        }
        cout << endl;
    }
}
int sumPositiveInRow(int arr[rows][cols], int row) {
    int sum = 0;
    for (int j = 0; j < cols; j++) {
        if (arr[row][j] > 0)
            sum += arr[row][j];
    }
    return sum;
}

int main() {
    int arr[rows][cols];
    fillArray(arr);
    printArray(arr);

    cout << "\n ���� �������� �������� �� �������:\n";
    for (int i = 0; i < rows; i++) {
        cout << "������ " << i << ": "
            << sumPositiveInRow(arr, i) << endl;
    }
    return 0;
}
