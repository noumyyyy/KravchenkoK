#include <iostream>
#include <iomanip>
#include <ctime>
using namespace std;

int main() {
	setlocale(LC_ALL, "Ukrainian");
    const int N = 9;
    int a[N][N];

    srand(time(0));

    for (int i = 0; i < N; i++) {
        for (int j = 0; j < N; j++) {
            a[i][j] = rand() % 100;
        }
    }

    cout << "��������� �������:\n";
    for (int i = 0; i < N; i++) {
        for (int j = 0; j < N; j++) {
            cout << setw(3) << a[i][j];
        }
        cout << endl;
    }

    // ���������� ����������� �������� ������� �� ������ �������
    for (int i = 0; i < N; i++) {
        int j_main = i;
        int j_sec = N - 1 - i;

        swap(a[i][j_main], a[i][j_sec]);
    }

    cout << "\nϳ��� ����������� ���������:\n";
    for (int i = 0; i < N; i++) {
        for (int j = 0; j < N; j++) {
            cout << setw(3) << a[i][j];
        }
        cout << endl;
    }

    return 0;
}
