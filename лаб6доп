#include <iostream>
#include <stdio.h>

int main() {
    setlocale(LC_ALL, "Ukrainian");
    const int N = 9;
    int a[N][N] = {
        {5, 2, 9, 4, 1, 7, 8, 6, 3},
        {4, 6, 3, 8, 2, 1, 9, 7, 5},
        {7, 1, 8, 3, 6, 5, 4, 2, 9},
        {9, 4, 6, 1, 7, 2, 5, 3, 8},
        {3, 8, 1, 5, 9, 4, 6, 0, 7},
        {2, 9, 5, 6, 1, 3, 7, 4, 8},
        {8, 3, 4, 7, 5, 9, 1, 0, 6},
        {1, 9, 7, 2, 4, 6, 3, 8, 5},
        {6, 7, 2, 9, 3, 8, 0, 1, 4}
    };

    //���� � ������� ����� �� ������
    for (int i = 0; i < N; i++) {
        int maxIndex = 0;
        for (int j = 1; j < N; j++) {
            if (a[i][j] > a[i][maxIndex]) {
                maxIndex = j;
            }
        }
        int temp = a[i][0];
        a[i][0] = a[i][maxIndex];
        a[i][maxIndex] = temp;
    }

    //�� � ������� ������� �� ��������
    for (int j = 0; j < N; j++) {
        int minIndex = 0;
        for (int i = 1; i < N; i++) {
            if (a[i][j] < a[minIndex][j]) {
                minIndex = i;
            }
        }
        int temp = a[N - 1][j];
        a[N - 1][j] = a[minIndex][j];
        a[minIndex][j] = temp;
    }

    printf("��������� �������:\n");
    for (int i = 0; i < N; i++) {
        for (int j = 0; j < N; j++) {
            printf("%3d ", a[i][j]);
        }
        printf("\n");
    }
    return 0;
}
